local Workspace = game:GetService("Workspace")
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")
local Players = game:GetService("Players")

-- ============================= CONFIG =============================
local REPLIT_SERVER = "https://cbb52fb2-f3e0-4691-a5e1-295c6cf29958-00-3ewo9jh2rrnsb.janeway.replit.dev:3000"
local PLACE_ID = 109983668079237

local MaxServerHistory = 15
local FastHop = false
local AggressiveHopping = false
local MaxTimeInServer = 120
local MinScanBeforeHop = 1

-- Persistance
local VISITED_KEY = "BrainrotScanner_VisitedServers_v2"
local visitedServers = {}
local scanCount = 0
local found, totalFound = {}, 0

-- ============================= HTTP SETUP (DELTA & WAVE) =============================
local request = (syn and syn.request) or (http and http.request) or (http_request) or request or (fluxus and fluxus.request)

-- Fonction HttpGet compatible DELTA
local function HttpGet(url)
	if not request then return nil end
	local success, response = pcall(function()
		return request({
			Url = url,
			Method = "GET"
		})
	end)
	if success and response.StatusCode == 200 then
		return response.Body
	else
		warn("HttpGet échoué : " .. tostring(response.StatusCode))
		return nil
	end
end

-- Fonction POST pour Replit
local function HttpPost(url, data)
	if not request then return false end
	local success, response = pcall(function()
		return request({
			Url = url,
			Method = "POST",
			Headers = {
				["Content-Type"] = "application/json",
				["User-Agent"] = "Roblox/BrainrotScanner"
			},
			Body = data
		})
	end)
	return success and response.StatusCode == 200
end

if not request then
	warn("AUCUNE FONCTION HTTP DISPONIBLE (request, syn, etc.)")
end

-- ============================= PERSISTENCE (OPTIONNELLE) =============================
local hasFileSystem = isfile and readfile and writefile

local function loadVisited()
	if not hasFileSystem or not isfile(VISITED_KEY) then return end
	pcall(function()
		local data = readfile(VISITED_KEY)
		local decoded = HttpService:JSONDecode(data)
		if typeof(decoded) == "table" then
			visitedServers = decoded
			print("Chargé " .. #visitedServers .. " serveurs visités.")
		end
	end)
end

local function saveVisited()
	if not hasFileSystem then return end
	pcall(function()
		writefile(VISITED_KEY, HttpService:JSONEncode(visitedServers))
	end)
end

loadVisited()

